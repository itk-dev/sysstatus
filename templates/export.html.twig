{% extends '@!EasyAdmin/layout.html.twig' %}
{% block page_title %}
  {{ 'export.headline'|trans }}
{% endblock %}

{% block main %}

  <div class="container-fluid">

    <h1>{{ 'export.headline'|trans }}</h1>

    <div class="export-section">
      <h4>{{ 'export.description'|trans }}</h4>

      <a class="btn" href="{{ path('export_report') }}" target="_blank">{{ 'export.reports'|trans }}</a>
      <a class="btn" href="{{ path('export_system') }}" target="_blank">{{ 'export.systems'|trans }}</a>
    </div>

    <div class="export-section">
      <h4>{{ 'export.filtered.description'|trans }}</h4>

      {{ form_start(sort_form) }}
      <div class="form-group export-form">
        <div>
          {{ form_label(sort_form.entity) }}
          {{ form_widget(sort_form.entity) }}
        </div>
        <div>
          {{ form_label(sort_form.group) }}
          {{ form_widget(sort_form.group) }}
        </div>
        <div>
          {{ form_label(sort_form.export_type) }}
          {{ form_widget(sort_form.export_type) }}
        </div>
        <div>
          {{ form_label(sort_form.color) }}
          {{ form_widget(sort_form.color) }}
        </div>
        <div class="mt-3">
          {{ form_widget(sort_form.submit, {attr: {class: 'btn btn-primary'}}) }}
        </div>
      </div>
      {{ form_end(sort_form) }}
    </div>
  </div>
{% endblock %}
